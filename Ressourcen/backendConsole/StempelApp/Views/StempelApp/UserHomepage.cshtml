@model StempelApp.Viewmodels.UserHomepageViewModel

<section class="section">
    @foreach (var project in Model.Projects)
    {
        <div class="accordion">
            <div class="accordion-header">
                <span>@project.CustomerName</span>
                <span class="has-text-right">@project.StartTime.ToString("dd.MM.yyyy 'um' HH:mm")</span>
            </div>
            <div class="accordion-content">
                <h4>Adresse</h4>
                <p>@project.Address</p>
                <form asp-controller="StempelApp" asp-action="AufgabenListe" method="get">
                    <button type="submit" class="button is-primary">Aufgabe</button>
                </form>
            </div>
        </div>
    }
</section>