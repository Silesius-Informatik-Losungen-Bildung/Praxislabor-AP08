@model StempelApp.Viewmodels.UserViewModel

<section class="section">
    @foreach (var project in Model.Projects)
    {
        <div class="accordion mb-4">
            <div class="accordion-header" style="display: flex; justify-content: space-between;">
                <span>@project.CustomerName</span>
                <span>@project.StartTime</span>
            </div>
            <div class="accordion-content">
                <h4>Adresse</h4>
                <p>@project.Address</p>
                <form asp-controller="StempelApp" asp-action="WorkList" method="get">
                    <input type="hidden" name="userEmail" value="@Model.UserEmail" />
                    <button type="submit" class="button is-primary">Aufgabe</button>
                </form>
            </div>
        </div>
    }
</section>