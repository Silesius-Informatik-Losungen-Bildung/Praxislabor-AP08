@* TODO : add viewmodel @model RegisterLoginSystemDemo.Viewmodels.RegisterViewModel*@ 

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h4>Benutzer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Benutzername" class="control-label"></label>
                <input asp-for="Benutzername" class="form-control" />
                <span asp-validation-for="Benutzername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwort" class="control-label"></label>
                <input asp-for="Passwort" class="form-control" type="password" />
                <span asp-validation-for="Passwort" class="text-danger"></span>
            </div>
            @*  TODO:
                    make a password confirmation*@
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}