@model StempelApp.Viewmodels.SetPasswordViewModel

@{
    ViewData["Title"] = "Passwort erstellen";
}

<div class="row">
    <div class="col-md-4">
        <h2>Passwort erstellen</h2>
        <p>Erstellen Sie ein neues Passwort für Ihr Konto.</p>

        <form asp-action="SetPassword" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden fields für Email und Token -->
            <input asp-for="Email" type="hidden" />
            <input asp-for="Token" type="hidden" />

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Passwort erstellen" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
