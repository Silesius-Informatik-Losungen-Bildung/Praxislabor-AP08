@model StempelApp.Viewmodels.SetPasswordViewModel

@{
    ViewData["Title"] = "Passwort erstellen";
}

<section class="section has-background-white">
    <div class="container has-background-white">
        <div class="columns is-centered">
            <div class="column is-one-third">
                <h2>Passwort erstellen</h2>
                <p>Erstellen Sie ein neues Passwort für Ihr Konto.</p>
                <form asp-action="SetPassword" asp-controller="Account">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Hidden fields für Email und Token -->
                    <input asp-for="Email" type="hidden" />
                    <input asp-for="Token" type="hidden" />

                    <div class="form-group">
                        <label asp-for="Password" class="control-label has-text-black"></label>
                        <div class="control has-icons-left">
                            <input asp-for="Password" type="password" class="input has-text-black" />
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label has-text-black"></label>
                        <div class="control has-icons-left">
                            <input asp-for="ConfirmPassword" type="password" class="input has-text-black" />
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Passwort erstellen" class="button is-success has-text-black is-rounded is-outlined" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
